<% if @subsidiary.errors.any? %>
  <p>Você deve corrigir os seguintes erros:</p>
  <ul>
    <% @subsidiary.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @subsidiary, local: true do |form| %>
  <p>
    <%= form.label :name, 'Nome' %><br>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.label :cnpj, 'CNPJ' %><br>
    <%= form.text_field :cnpj %>
  </p>
  <p>
    <%= form.label :address, 'Endereço' %><br>
    <%= form.text_field :address %>
  </p>
  <p>
    <%= form.submit 'Enviar' %>
  </p>
<% end %>
